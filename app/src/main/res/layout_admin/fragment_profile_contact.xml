<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin người liên hệ"
            android:textAppearance="?attr/textAppearanceTitleMedium" 
            android:layout_marginBottom="16dp"/>

        <!-- Contact Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên người liên hệ"
            android:textAppearance="?attr/textAppearanceLabelMedium"/>
        <TextView
            android:id="@+id/text_contact_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            tools:text="Phụ huynh của Kiên" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_contact_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_contact_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contact Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Số điện thoại người liên hệ"
            android:textAppearance="?attr/textAppearanceLabelMedium"/>
        <TextView
            android:id="@+id/text_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            tools:text="0934567890" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_edit_contact"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chỉnh sửa" />

            <Button
                android:id="@+id/button_save_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>